{
  "name": "@vocality-org/core",
  "version": "1.0.0",
  "description": "Vocality core provides a plugin based discord bot",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "scripts": {
    "prepare": "npm run compile",
    "build": "npm run compile",
    "compile": "tsc -p .",
    "clean": "gts clean",
    "check": "gts check",
    "fix": "gts fix",
    "docs": "typedoc --plugin typedoc-plugin-markdown --theme docusaurus2 src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vocality-org/vocality.git"
  },
  "author": "Vocality Authors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vocality-org/vocality/issues"
  },
  "homepage": "https://github.com/vocality-org/vocality/tree/master/packages/vocality-core#readme",
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.d.ts",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@vocality-org/types": "^1.0.0",
    "gts": "^1.1.2",
    "typedoc": "^0.15.8",
    "typedoc-plugin-markdown": "^2.2.16",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "@discordjs/opus": "github:discordjs/opus",
    "discord.js": "github:discordjs/discord.js"
  }
}
