{
  "name": "vocality",
  "version": "1.0.0",
  "description": "Selfhosted Discord Music Bot",
  "main": "server.ts",
  "scripts": {
    "start": "ts-node src/server.ts",
    "start:production": "NODE_ENV=production node build/src/server.js ",
    "prebuild": "npm run clean",
    "build": "npm run compile",
    "build:live": "nodemon --watch src --exec ts-node src/server.ts",
    "compile": "tsc -p .",
    "test": "ts-mocha --exit --grep commands --invert -p tsconfig.json test/**/*.ts",
    "test:commands": "ts-mocha --exit --grep commands -p tsconfig.json test/**/*.ts",
    "test:coverage": "nyc npm test",
    "clean": "gts clean",
    "check": "gts check",
    "fix": "gts fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vocality-org/vocality.git"
  },
  "author": "Herzog Matthias, Kaindl Julian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vocality-org/vocality/issues"
  },
  "homepage": "https://github.com/vocality-org/vocality#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/cheerio": "^0.22.15",
    "@types/is-url": "^1.2.28",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.17",
    "@types/node-fetch": "^2.5.4",
    "@types/request": "^2.48.3",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "discord-response-mock": "^0.3.2",
    "gts": "^1.1.2",
    "husky": "^3.1.0",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "nyc": "^14.1.1",
    "ts-mocha": "^6.0.0",
    "tslint": "^5.20.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "cheerio": "^1.0.0-rc.3",
    "discord.js": "^11.5.1",
    "dotenv": "^8.2.0",
    "erlpack": "github:hammerandchisel/erlpack",
    "is-url": "^1.2.4",
    "libsodium-wrappers": "^0.7.6",
    "node-fetch": "^2.6.0",
    "node-opus": "^0.3.3",
    "query-string": "^6.9.0",
    "request": "^2.88.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "ts-node": "^8.5.4",
    "youtube-playlist": "^1.0.2",
    "ytdl-core": "^1.0.3"
  },
  "engines": {
    "node": "=10.x.x",
    "npm": "=6.x.x"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
